<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.activity.login.LoginActivity">

        <ImageView
                android:id="@+id/ivCategoryImage"
                android:layout_width="@dimen/category_itrem_image_size"
                android:layout_height="@dimen/category_itrem_image_size"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_margin"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="@dimen/test_large"
                app:layout_constraintStart_toEndOf="@+id/ivCategoryImage"
                app:layout_constraintTop_toTopOf="@+id/ivCategoryImage" />

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/common_margin"
                android:background="@color/hints"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:text="Computer programming is the process of designing and building an executable computer program for accomplishing a specific computing task. "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvCategoryName"
                app:layout_constraintTop_toBottomOf="@+id/tvCategoryName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>